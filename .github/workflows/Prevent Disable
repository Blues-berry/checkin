name: Prevent Disable

on:
  schedule:
    - cron: '30 16 * * *'  # 每天北京时间 00:30 运行（推荐这个时间）
  workflow_dispatch:      # 额外加这个，方便你手动触发测试

jobs:
  keep-active:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
        with:
          token: ${{ secrets.GITHUB_TOKEN }}  # 默认就有，不需要额外配置

      - run: |
          echo "Last keep-alive run: $(date -u)" >> keep-alive.txt
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"
          git add keep-alive.txt
          git commit -m "Keep workflow active [skip ci]"
          git push

      # 可选：如果上面 push 失败（极少情况），强制 push
      - name: Force push if needed
        if: failure()
        run: |
          git push origin HEAD:main --force  # 或 HEAD:master，根据你的默认分支
